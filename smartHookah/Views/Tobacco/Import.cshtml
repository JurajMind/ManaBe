@model smartHookah.Models.Db.Brand

@{
    ViewBag.Title = "Import";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
   
    @using (Html.BeginForm("ImportPost", "Tobacco", FormMethod.Post, new { enctype = "multipart/form-data", id = "createForm" }))
    {
        @Html.AntiForgeryToken()
        <h4 class="card-header">Brand</h4>
        <div class="card-body container form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group">
                <div class="col-md-10">
                    <label class="btn btn-primary" >
                        <input  name="file" type="file" style="display:none;" onchange="$('#importFileInfo').html(this.files[0].name);">
                        Upload
                    </label>
                    <span class='label label-info' id="importFileInfo"></span>
                </div>
            </div>
         

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
