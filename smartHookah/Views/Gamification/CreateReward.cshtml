@model smartHookah.Models.Reward

@{
    ViewBag.Title = "Reward";
}

<div class="well">
    <h2>Create or uprade reward</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("EventId",Model.EventId);
        @Html.Hidden("RewardId",Model.Id)
