@model IEnumerable<smartHookah.Models.Db.Brand>

@{
    ViewBag.Title = "Hookah brands";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="well">
   
    @section dropmenu{
   
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-success dropdown-item" })
   
        }
  
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
               Www
            </th>
            <th>
               
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    <a href="@item.Url" target="_blank">SmokeDex</a>
                </td>
                <td>
                  

               
                      
                        <img src="@item.Picture" height="50px" />
                    
                  
                    
                    
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Name }) |
                    @if (User.IsInRole("Admin"))
                    {
                        <div>
                        @Html.ActionLink("Edit", "Edit", new {id = item.Name}) |

                        @Html.ActionLink("Delete", "Delete", new {id = item.Name})
                        </div>
                    }
                </td>
            </tr>
        }

    </table>
</div>
