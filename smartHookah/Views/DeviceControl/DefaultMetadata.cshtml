@model smartHookah.Controllers.DefaultMetadataViewModel

@{
    ViewBag.Title = "Default metadata";
    
}

<div class="card">
    
    <div class="card-body">
        @using (Html.BeginForm("SaveDefaultMetadata", "DeviceControl"))
    {
        @Html.AntiForgeryToken()
        @Html.Partial("_MetaDataEdit", Model.MetadataView)
        @Html.Hidden("hookahId", Model.hookahId)
        @Html.Hidden("personId", Model.personId)
        <button class="pull-right btn btn-raised btn-success">@Smoke.SmokeSession.saveChanges&nbsp;<i class="fa fa-save"></i></button>
    }
</div>
</div>
