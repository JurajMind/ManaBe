@model IEnumerable<smartHookah.Models.StandPicture>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="well">
    <h2>Stand pictures</h2>

    <p>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-raised btn-success" })
    </p>
    <table class="table">
        <tr>
            <th>
                Img
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img alt="Embedded Image" src="data:image/png;base64,@item.HtmlString" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Width)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @if (User.IsInRole("Admin"))
                    {
                        <text>
                            @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
                            @Html.ActionLink("Delete", "Delete", new {id = item.Id})
                        </text>
                    }
                </td>
            </tr>
        }

    </table>
</div>