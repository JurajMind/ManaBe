@using Microsoft.AspNet.Identity
@using smartHookah.Helpers
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

        <img src="/Content/BrandPicture/Manapipes.png" class="avatar">
        <div class="account">
            <span>@User.Identity.GetUserNameUni() </span>
            <div class="dropdown">
                <button class="btn bmd-btn-icon dropdown-toggle" type="button" id="nav-account-menu" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="material-icons">arrow_drop_down</i>
                    <div class="ripple-container"></div></button>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="nav-account-menu">
                    @Html.ActionLink(@Account.Account.profile, "Profile", "Gamification", routeValues: null, htmlAttributes: new { title = "Manage", @class = "dropdown-item" })
                    <a  class="dropdown-item " href="javascript:document.getElementById('logoutForm').submit()">@Home.Home.logOff</a>
                </div>
            </div>
        </div>


