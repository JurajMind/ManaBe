@model IEnumerable<smartHookah.Models.Update>

@{
    ViewBag.Title = "Updates";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="well">
    <h2>Updates</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Version)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleseNote)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                   @Helper.UpdateVersionToString(item.Version)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleseNote)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>